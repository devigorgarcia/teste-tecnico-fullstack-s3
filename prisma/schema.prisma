// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String    @id @default(uuid())
  fullName  String
  email     String    @unique
  phone     String
  createdAt DateTime  @default(now())
  contact   Contact[]

  @@map("clients")
}

model Contact {
  id       String @id @default(uuid())
  fullName String
  email    String @unique
  phone    String
  client   Client @relation(fields: [clientId], references: [id])
  clientId String

  @@map("contacts")
}
